generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
}

enum Role {
  USER
  ADMIN
}

enum ItemStatus {
  AVAILABLE
  UNAVAILABLE
}

enum BorrowStatus {
  PENDING    
  APPROVED    
  BORROWED   
  RETURNED   
  REJECTED     
  CANCELLED
}


model User {
  id            String         @id @default(uuid())
  email         String         @unique
  password      String
  role          Role           @default(USER)
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  sessions      Session[]
  borrowedItems BorrowedItem[]
}

model Session {
  id        String   @id @default(uuid())
  userId    String
  token     String   @unique
  expiresAt DateTime
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([token])
}

model Item {
  id          String     @id @default(uuid())
  name        String
  tag         String
  price       Int
  status      ItemStatus @default(AVAILABLE)
  quantity    Int        @default(1)
  isAvailable Boolean    @default(true)
  createdAt   DateTime
  updatedAt   DateTime

  borrowedItems BorrowedItem[]
}

model BorrowedItem {
  id           String       @id @default(uuid())
  userId       String
  itemId       String
  borrowedAt   DateTime?     @default(now())
  dueDate      DateTime
  status       BorrowStatus @default(PENDING)
  returnedAt   DateTime?
  durationDays Int?
  createdAt    DateTime
  updatedAt    DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  item Item @relation(fields: [itemId], references: [id], onDelete: Restrict)

  @@index([userId])
  @@index([itemId])
}

model BorrowedItemHistory {
  id           String       @id @default(uuid())
  userId       String
  itemId       String
  borrowedAt   DateTime     @default(now())
  dueDate      DateTime
  returnedAt   DateTime?
  durationDays Int?
  createdAt    DateTime
  updatedAt    DateTime
}