generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String     @id @default(uuid())
  email     String     @unique
  password  String
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  role      String     @default("user")
  sessions  Session[]
}

model Session {
  id        String    @id @default(uuid())
  userId    String
  token     String    @unique
  expiresAt DateTime
  createdAt DateTime  @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([token])
}

model Item {
  id          String    @id @default(uuid())
  name        String
  tag         String
  price       Int
  status      String  
  isAvailable Boolean   @default(true)
  createdAt   DateTime
  updatedAt   DateTime
}

model BorrowedItem {
  id        String    @id @default(uuid())
  userId    String
  itemId    String
  Duration  DateTime
  createdAt DateTime
  updatedAt DateTime

  @@index([userId])
}
